<script>
function modCheck() {
  if (!($("#pass1").val())){
    alert("패스워드를 입력하시오.");
    return false;
  }
  if (!($("#pass2").val())){
    alert("패스워드를 한번더 입력하시오.");
    return false;
  }
  if ($("#pass1").val() != $("#pass2").val()) {
    alert("패스워드가 일치하지 않습니다.");
    return false;
  }
  return true;
}
</script>
<content>
    <div class="jumbotron ml-auto mr-auto mt-4 mb-4" style="width:500px">
        <form onsubmit="return modCheck()" method="post" name="modform" action="/web/mod">
            <h5>패스워드 변경</h5>
            <hr>
            <div class="form-group">
                <label for="username-email">아이디</label>
                <input class="form-control" type="text" value="admin" readonly>
            </div>
            <div class="form-group">
                <label for="password">패스워드</label>
                <input class="form-control" type="password" name="pass1" id="pass1" placeholder="패스워드를 입력하시오" maxlength="20">
            </div>
            <div class="form-group">
                <label for="password">패스워드 확인</label>
                <input class="form-control" type="password" name="pass2" id="pass2" placeholder="패스워드를 한번더 입력하시오" maxlength="20">
            </div>
            <hr>
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="변경완료">
            </div>
        </form>
    </div>
</content>
