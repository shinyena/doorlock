<script>
function loginCheck() {
  if (!($("#uid").val())){
    alert("아이디를 입력하시오.");
    return false;
  }
  if (!($("#pass").val())){
    alert("패스워드를 입력하시오.");
    return false;
  }
  return true;
}
</script>
<content>
    <div class="m-4">
        <div class="jumbotron m-auto" style="width:400px">
            <form onsubmit="return loginCheck()" method="post" action="/web/login">
                <h5>로그인</h5>
                <hr>
                <div class="form-group">
                    <label for="username-email">아이디</label>
                    <input class="form-control" type="text" id="uid" name="uid" placeholder="아이디를 입력하시오" maxlength="20">
                </div>
                <div class="form-group">
                    <label for="password">패스워드</label>
                    <input class="form-control" type="password" id="pass" name="pass" placeholder="패스워드를 입력하시오" maxlength="20">
                </div>
                <hr>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary btn-block mt-4" value="로그인">
                </div>
            </form>
        </div>
    </div>
</content>
