<content>
    <div>
        <img src="/images/banner.jpg" alt="banner" width="100%" height="250px">
    </div>
    <div class="container-fluid">
        <ul class="breadcrumb mt-3">
            <li class="breadcrumb-item">가천도어락</li>
            <li class="breadcrumb-item active">장애내역</li>
        </ul>

    </div>
    <div class="container">
        <form>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>장애 발생일시</th>
                        <th>사용자</th>
                        <th>모듈 이름</th>
                        <th>장애 코드</th>
                        <th>장애 내용</th>
                        <th>장애 설명</th>
                    </tr>
                </thead>
                <tbody>
                    <% logdata.forEach(function (item, index) { %>
                    <tr>
                        <td><%=item.error_date.toLocaleString();%></td>
                        <td><%=item.uid%></td>
                        <td><%=item.module%></td>
                        <td><%=item.code%></td>
                        <td><%=item.title%></td>
                        <td><%=item.message%></td>
                    </tr>
                    <% }); %>
            </table>
        </form>

        <ul class="pagination justify-content-center">
            <% if (page == 1) { %>
            <li class="page-item disabled"><a class="page-link" href="#">Previous</a></li>
            <% } else { %>
            <li class="page-item"><a class="page-link" href="/web/errorapp/?page=<%=Number(page)-1%>">Previous</a></li>
            <% } %>

            <% for (i=1; i<=totalPages; i++) { %>
            <% if (i==page) { %>
            <li class="page-item active"><a class="page-link" href="/web/errorapp/?page=<%=i%>"><%=i%></a></li>
            <% } else { %>
            <li class="page-item"><a class="page-link" href="/web/errorapp/?page=<%=i%>"><%=i%></a></li>
            <% } %>
            <% } %>

            <% if (page == totalPages) { %>
            <li class="page-item disabled"><a class="page-link" href="#">Next</a></li>
            <% } else { %>
            <li class="page-item"><a class="page-link" href="/web/errorapp/?page=<%=Number(page)+1%>">Next</a></li>
            <% } %>
        </ul>
    </div>
</content>
